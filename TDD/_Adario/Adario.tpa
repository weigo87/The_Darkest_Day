DEFINE_ACTION_MACRO PatchDD0401X BEGIN
	COPY_EXISTING ~DD0401X.are~ ~override~
		LPF ALTER_AREA_REGION 
			INT_VAR activate_x = 0 
					activate_y = 0 
			STR_VAR region_name = "Tran0301" 
					entrance_name = "EXITDD0401" END
END
